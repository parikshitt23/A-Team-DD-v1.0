<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fdffffff"
    android:descendantFocusability="blocksDescendants"
    tools:context="com.ufl.gradeup.AddScheduleActivity"
    android:theme="@style/CardView">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"></include>

    <TextView
        android:id="@+id/sdate"
        android:hint="Select date"
        android:layout_below="@+id/app_bar"
        android:layout_alignRight="@+id/checkschbtn"
        android:layout_alignEnd="@+id/checkschbtn"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:onClick="showDatePickerDialog"
        android:drawableRight="@mipmap/ic_date_selector"
        android:text="Date"
        android:textSize="20dp"
        android:ems="15"
        style="@android:style/Widget.EditText"
        android:focusable="true"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/checkschbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sdate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="View Schedule"
        android:focusableInTouchMode="true"
        android:textColor="#fdffffff"
        style="@style/CardView"
        android:theme="@style/CardView" />

    <ListView
        android:id="@+id/scheduleListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/checkschbtn"
        android:layout_marginTop="20dp"
        android:dividerHeight="2dp"
        android:drawSelectorOnTop="false"
        android:divider="@color/cardview_shadow_start_color"
        android:fastScrollStyle="@color/cardview_shadow_start_color"
        android:theme="@style/CardView.Light"
        android:visibility="visible"
        android:background="@color/cardview_light_background"
        style="@style/CardView"
        android:focusable="true"
        android:touchscreenBlocksFocus="false" />

</RelativeLayout>