<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ufl.gradeup.CreateGroupActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"></include>

    <EditText
        android:id="@+id/groupNameTxt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/app_bar"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@mipmap/emailid_icon"

        android:hint="Group Name" />

    <EditText
        android:id="@+id/addGroupMemberTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/groupNameTxt"
        android:layout_alignLeft="@+id/groupNameTxt"
        android:layout_alignRight="@+id/groupNameTxt"
        android:layout_alignStart="@+id/groupNameTxt"
        android:layout_below="@+id/groupNameTxt"
        android:layout_marginTop="20dp"
        android:autoText="false"
        android:drawableLeft="@mipmap/emailid_icon"
        android:drawableRight="@drawable/plus"
        android:ems="10"
        android:hint="Add Group Members"
        android:inputType="textEmailAddress" />





</RelativeLayout>
